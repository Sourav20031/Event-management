<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Reports</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 1200px; margin: 0 auto; }
        h1 { color: #2c3e50; margin-bottom: 30px; }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            text-align: center;
        }
        .stat-card h3 {
            color: #667eea;
            font-size: 36px;
            margin-bottom: 10px;
        }
        .stat-card p {
            color: #7f8c8d;
            font-size: 14px;
        }
        .section {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .section h2 {
            color: #2c3e50;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th {
            background: #f9f9f9;
            padding: 12px;
            text-align: left;
            color: #2c3e50;
            font-weight: bold;
            border-bottom: 2px solid #ddd;
        }
        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }
        tr:hover { background: #f9f9f9; }
        .badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
        }
        .badge-active { background: #d4edda; color: #155724; }
        .badge-inactive { background: #f8d7da; color: #721c24; }
        .badge-pending { background: #fff3cd; color: #856404; }
        .badge-confirmed { background: #d1ecf1; color: #0c5460; }
        .back-btn {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <header>
        <div>
            <h2>Admin Reports</h2>
        </div>
        <div class="header-right">
            <a href="/admin/dashboard">Home</a>
            <span>Welcome <%= name %></span>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/admin/dashboard" class="back-btn">← Back to Dashboard</a>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <h3><%= membershipStats.filter(s => s.status === 'Active').reduce((sum, s) => sum + s.count, 0) %></h3>
                <p>Active Memberships</p>
            </div>
            <div class="stat-card">
                <h3><%= vendorStats.filter(s => s.status === 'Active').reduce((sum, s) => sum + s.count, 0) %></h3>
                <p>Active Vendors</p>
            </div>
            <div class="stat-card">
                <h3><%= userStats.reduce((sum, s) => sum + s.count, 0) %></h3>
                <p>Active Users</p>
            </div>
            <div class="stat-card">
                <h3><%= orderStats.filter(s => s.order_status === 'Confirmed').reduce((sum, s) => sum + s.count, 0) %></h3>
                <p>Confirmed Orders</p>
            </div>
        </div>

        <!-- Membership Status Report -->
        <div class="section">
            <h2>Membership Status Report</h2>
            <table>
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    <% membershipStats.forEach(stat => { %>
                        <tr>
                            <td>
                                <span class="badge <%= 'badge-' + stat.status.toLowerCase() %>">
                                    <%= stat.status %>
                                </span>
                            </td>
                            <td><%= stat.count %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Vendor Status Report -->
        <div class="section">
            <h2>Vendor Status Report</h2>
            <table>
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    <% vendorStats.forEach(stat => { %>
                        <tr>
                            <td>
                                <span class="badge <%= 'badge-' + stat.status.toLowerCase() %>">
                                    <%= stat.status %>
                                </span>
                            </td>
                            <td><%= stat.count %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Order Status Report -->
        <div class="section">
            <h2>Order Status & Revenue Report</h2>
            <table>
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Count</th>
                        <th>Total Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    <% orderStats.forEach(stat => { %>
                        <tr>
                            <td>
                                <span class="badge <%= 'badge-' + stat.order_status.toLowerCase() %>">
                                    <%= stat.order_status %>
                                </span>
                            </td>
                            <td><%= stat.count %></td>
                            <td>₹<%= parseFloat(stat.total || 0).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Recent Orders -->
        <div class="section">
            <h2>Recent Orders</h2>
            <table>
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>User</th>
                        <th>Vendor</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% recentOrders.forEach(order => { %>
                        <tr>
                            <td><%= order.order_number %></td>
                            <td><%= order.user_name %></td>
                            <td><%= order.vendor_name || 'N/A' %></td>
                            <td>₹<%= parseFloat(order.total_amount).toFixed(2) %></td>
                            <td>
                                <span class="badge <%= 'badge-' + order.order_status.toLowerCase() %>">
                                    <%= order.order_status %>
                                </span>
                            </td>
                            <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
