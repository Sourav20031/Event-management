<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Membership - Admin</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 600px; margin: 0 auto; }
        .content {
            background: white; padding: 30px; border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        h1 { color: #2c3e50; margin-bottom: 25px; }
        h2 { color: #2c3e50; font-size: 18px; margin-top: 25px; margin-bottom: 15px; }
        .form-group { margin-bottom: 20px; }
        label {
            display: block; margin-bottom: 8px; font-weight: 500;
            color: #444;
        }
        input[type="text"], input[type="email"], input[type="tel"],
        select, textarea {
            width: 100%; padding: 10px; border: 1px solid #ddd;
            border-radius: 4px; font-size: 14px;
        }
        input[readonly] {
            background: #f9f9f9;
        }
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        .radio-group {
            display: flex; flex-direction: column; gap: 12px;
        }
        .radio-group label {
            display: flex; align-items: center; gap: 10px;
            margin: 0; font-weight: normal; cursor: pointer;
        }
        input[type="radio"] {
            width: auto; cursor: pointer;
        }
        .error { color: #e74c3c; font-size: 12px; margin-top: 5px; }
        .message {
            padding: 15px; border-radius: 4px; margin-bottom: 20px;
        }
        .message.error {
            background: #f8d7da; color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .btn-group {
            display: flex; gap: 10px; margin-top: 25px;
        }
        button {
            flex: 1; padding: 12px; border: none;
            border-radius: 4px; font-weight: 500;
            cursor: pointer; transition: background 0.3s;
        }
        .btn-submit {
            background: #3498db; color: white;
        }
        .btn-submit:hover { background: #2980b9; }
        .btn-reset {
            background: #95a5a6; color: white;
        }
        .btn-reset:hover { background: #7f8c8d; }
        .back-btn {
            display: inline-block; margin-bottom: 20px;
            padding: 8px 15px; background: #666;
            color: white; text-decoration: none;
            border-radius: 4px;
        }
        #membershipDetails {
            display: none;
        }
        #membershipDetails.show {
            display: block;
        }
        .search-btn {
            padding: 10px 20px;
            background: #27ae60;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
        }
        .search-btn:hover {
            background: #229954;
        }
    </style>
</head>
<body>
    <header>
        <h2>Update Membership</h2>
        <div class="header-right">
            <a href="/admin/dashboard">Home</a>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/admin/maintenance-menu" class="back-btn">‚Üê Back</a>

        <div class="content">
            <h1>Update Membership for Vendor</h1>

            <!-- SEARCH SECTION -->
            <div>
                <h2>Search Membership</h2>
                <div class="form-group">
                    <label for="membershipNo">Membership Number *</label>
                    <div style="display: flex; gap: 10px;">
                        <input type="text" id="membershipNo" name="membership_no" 
                               placeholder="e.g., MEM-20260211-001" style="flex: 1;">
                        <button type="button" class="search-btn" onclick="searchMembership()">Search</button>
                    </div>
                    <span class="error" id="searchError"></span>
                </div>
            </div>

            <!-- DETAILS SECTION (Hidden until search) -->
            <div id="membershipDetails">
                <form id="updateForm">
                    
                    <input type="hidden" id="membershipId" name="membership_id">
                    
                    <h2>Membership Details</h2>
                    
                    <div class="form-group">
                        <label>Vendor Name</label>
                        <input type="text" id="vendorName" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label>Current End Date</label>
                        <input type="text" id="currentEndDate" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label>Current Status</label>
                        <input type="text" id="currentStatus" readonly>
                    </div>

                    <!-- ACTION SELECTION -->
                    <h2>Select Action</h2>
                    <fieldset style="border: none; padding: 0;">
                        <div class="radio-group">
                            <label>
                                <input type="radio" name="action" value="extend" checked class="actionRadio" onchange="toggleActionFields()">
                                Extend Membership
                            </label>
                        </div>

                        <!-- Extension Options (visible by default) -->
                        <div id="extensionOptions">
                            <label style="margin-top: 12px;">Extension Duration (Default: 6 months) *</label>
                            <div class="radio-group">
                                <label>
                                    <input type="radio" name="extensionDuration" value="6_months" checked>
                                    6 Months (Default)
                                </label>
                                <label>
                                    <input type="radio" name="extensionDuration" value="1_year">
                                    1 Year
                                </label>
                                <label>
                                    <input type="radio" name="extensionDuration" value="2_years">
                                    2 Years
                                </label>
                            </div>
                        </div>

                        <div class="radio-group" style="margin-top: 15px;">
                            <label>
                                <input type="radio" name="action" value="cancel" class="actionRadio" onchange="toggleActionFields()">
                                Cancel Membership
                            </label>
                        </div>

                        <!-- Cancellation Reason -->
                        <div id="cancellationReason" style="display:none; margin-top: 12px;">
                            <label for="reason">Reason for Cancellation</label>
                            <textarea id="reason" name="cancellation_reason"></textarea>
                        </div>
                    </fieldset>

                    <div class="btn-group">
                        <button type="submit" class="btn-submit">Update Membership</button>
                        <button type="reset" class="btn-reset">Clear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function searchMembership() {
            const membershipNo = document.getElementById('membershipNo').value.trim();
            document.getElementById('searchError').textContent = '';
            
            if (!membershipNo) {
                document.getElementById('searchError').textContent = 'Please enter membership number';
                return;
            }

            fetch(`/admin/api/membership/${membershipNo}`)
                .then(res => {
                    if (!res.ok) throw new Error('Not found');
                    return res.json();
                })
                .then(data => {
                    // Populate form
                    document.getElementById('membershipId').value = data.id;
                    document.getElementById('vendorName').value = data.vendor_name;
                    document.getElementById('currentEndDate').value = data.end_date;
                    document.getElementById('currentStatus').value = data.status;
                    
                    document.getElementById('membershipDetails').classList.add('show');
                })
                .catch(err => {
                    document.getElementById('searchError').textContent = 'Membership not found';
                    document.getElementById('membershipDetails').classList.remove('show');
                });
        }

        function toggleActionFields() {
            const action = document.querySelector('input[name="action"]:checked').value;
            
            if (action === 'extend') {
                document.getElementById('extensionOptions').style.display = 'block';
                document.getElementById('cancellationReason').style.display = 'none';
            } else {
                document.getElementById('extensionOptions').style.display = 'none';
                document.getElementById('cancellationReason').style.display = 'block';
            }
        }

        document.getElementById('updateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!document.getElementById('membershipId').value) {
                alert('Please search for a membership first');
                return;
            }
            
            const formData = new FormData(this);
            
            fetch('/admin/update-membership', {
                method: 'POST',
                body: new URLSearchParams(formData)
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(err => {
                alert('Error updating membership');
                console.error(err);
            });
        });
    </script>
</body>
</html>
