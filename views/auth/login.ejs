<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management System - Login</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 500px;
            padding: 40px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #2c3e50;
            margin-bottom: 10px;
        }
        .header p {
            color: #7f8c8d;
        }
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            border-bottom: 2px solid #ecf0f1;
        }
        .tab-btn {
            flex: 1;
            padding: 12px;
            background: none;
            border: none;
            border-bottom: 3px solid transparent;
            color: #7f8c8d;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
        }
        .tab-btn.active {
            color: #3498db;
            border-bottom-color: #3498db;
        }
        .form-section {
            display: none;
        }
        .form-section.active {
            display: block;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #2c3e50;
        }
        input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            transition: border-color 0.3s;
        }
        input:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
        }
        .error {
            color: #e74c3c;
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }
        .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        button {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 4px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s;
        }
        .btn-submit {
            background: #3498db;
            color: white;
        }
        .btn-submit:hover {
            background: #2980b9;
        }
        .btn-reset {
            background: #ecf0f1;
            color: #2c3e50;
        }
        .btn-reset:hover {
            background: #bdc3c7;
        }
        .message {
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .success-link {
            text-align: center;
            margin-top: 20px;
        }
        .success-link a {
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
        }
        .success-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Event Management System</h1>
            <p>Login to your account</p>
        </div>

        <% if (message) { %>
            <div class="message error"><%= message %></div>
        <% } %>

        <div class="tabs">
            <button class="tab-btn active" onclick="showTab(event, 'admin-login')">Admin</button>
            <button class="tab-btn" onclick="showTab(event, 'vendor-login')">Vendor</button>
            <button class="tab-btn" onclick="showTab(event, 'user-login')">User</button>
        </div>

        <!-- Admin Login -->
        <form id="admin-login" class="form-section active" method="POST" action="/authenticate">
            <input type="hidden" name="role" value="Admin">
            
            <div class="form-group">
                <label for="admin-userid">User ID *</label>
                <input type="text" id="admin-userid" name="user_id" required>
                <span class="error" id="adminUserIdError"></span>
            </div>

            <div class="form-group">
                <label for="admin-password">Password *</label>
                <input type="password" id="admin-password" name="password" required>
                <span class="error" id="adminPasswordError"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">Login</button>
                <button type="reset" class="btn-reset">Clear</button>
            </div>
        </form>

        <!-- Vendor Login -->
        <form id="vendor-login" class="form-section" method="POST" action="/authenticate">
            <input type="hidden" name="role" value="Vendor">
            
            <div class="form-group">
                <label for="vendor-userid">User ID *</label>
                <input type="text" id="vendor-userid" name="user_id" required>
                <span class="error" id="vendorUserIdError"></span>
            </div>

            <div class="form-group">
                <label for="vendor-password">Password *</label>
                <input type="password" id="vendor-password" name="password" required>
                <span class="error" id="vendorPasswordError"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">Login</button>
                <button type="reset" class="btn-reset">Clear</button>
            </div>
        </form>

        <!-- User Login -->
        <form id="user-login" class="form-section" method="POST" action="/authenticate">
            <input type="hidden" name="role" value="User">
            
            <div class="form-group">
                <label for="user-userid">User ID *</label>
                <input type="text" id="user-userid" name="user_id" required>
                <span class="error" id="userUserIdError"></span>
            </div>

            <div class="form-group">
                <label for="user-password">Password *</label>
                <input type="password" id="user-password" name="password" required>
                <span class="error" id="userPasswordError"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">Login</button>
                <button type="reset" class="btn-reset">Clear</button>
            </div>
        </form>

        <div class="success-link">
            <p>Don't have an account? <a href="/signup">Sign Up Here</a></p>
        </div>
    </div>

    <script>
        function showTab(e, tabId) {
            e.preventDefault();
            
            // Hide all forms
            document.querySelectorAll('.form-section').forEach(el => {
                el.classList.remove('active');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.tab-btn').forEach(el => {
                el.classList.remove('active');
            });
            
            // Show selected form and button
            document.getElementById(tabId).classList.add('active');
            e.target.classList.add('active');
        }

        // Form validation
        document.getElementById('admin-login').addEventListener('submit', function(e) {
            let valid = true;
            document.querySelectorAll('.error').forEach(el => el.textContent = '');
            
            if (!document.getElementById('admin-userid').value.trim()) {
                document.getElementById('adminUserIdError').textContent = 'User ID is required';
                valid = false;
            }
            if (!document.getElementById('admin-password').value) {
                document.getElementById('adminPasswordError').textContent = 'Password is required';
                valid = false;
            }
            if (!valid) e.preventDefault();
        });

        document.getElementById('vendor-login').addEventListener('submit', function(e) {
            let valid = true;
            document.querySelectorAll('.error').forEach(el => el.textContent = '');
            
            if (!document.getElementById('vendor-userid').value.trim()) {
                document.getElementById('vendorUserIdError').textContent = 'User ID is required';
                valid = false;
            }
            if (!document.getElementById('vendor-password').value) {
                document.getElementById('vendorPasswordError').textContent = 'Password is required';
                valid = false;
            }
            if (!valid) e.preventDefault();
        });

        document.getElementById('user-login').addEventListener('submit', function(e) {
            let valid = true;
            document.querySelectorAll('.error').forEach(el => el.textContent = '');
            
            if (!document.getElementById('user-userid').value.trim()) {
                document.getElementById('userUserIdError').textContent = 'User ID is required';
                valid = false;
            }
            if (!document.getElementById('user-password').value) {
                document.getElementById('userPasswordError').textContent = 'Password is required';
                valid = false;
            }
            if (!valid) e.preventDefault();
        });
    </script>
</body>
</html>
