<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Item - Vendor</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .form-container {
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 500px;
        }
        h1 { color: #2c3e50; margin-bottom: 30px; text-align: center; }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            color: #34495e;
            font-weight: bold;
            margin-bottom: 8px;
        }
        input, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            font-family: inherit;
        }
        input:focus, textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 5px rgba(102, 126, 234, 0.3);
        }
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
        }
        button:hover {
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .back-link {
            text-align: center;
            margin-top: 20px;
        }
        .back-link a {
            color: #667eea;
            text-decoration: none;
        }
        .error {
            color: #e74c3c;
            font-size: 12px;
            display: none;
        }
        .error.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Add New Item</h1>
        
        <form id="addItemForm">
            <div class="form-group">
                <label for="productName">Product Name *</label>
                <input type="text" id="productName" name="productName" required placeholder="Enter product name">
                <span class="error" id="productNameError">Product name is required</span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="price">Price (Rs) *</label>
                    <input type="number" id="price" name="price" step="0.01" min="0" required placeholder="Enter price">
                    <span class="error" id="priceError">Price must be a positive number</span>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <input type="text" id="category" name="category" placeholder="e.g., Decoration Items">
                </div>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" placeholder="Enter product description"></textarea>
            </div>

            <button type="submit">Add Item</button>
        </form>

        <div class="back-link">
            <a href="/vendor/your-items">‚Üê Back to Your Items</a>
        </div>
    </div>

    <script>
        document.getElementById('addItemForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Clear previous errors
            document.querySelectorAll('.error').forEach(el => el.classList.remove('show'));
            
            const productName = document.getElementById('productName').value.trim();
            const price = document.getElementById('price').value;
            const description = document.getElementById('description').value.trim();
            
            let hasError = false;
            
            // Validation
            if (!productName) {
                document.getElementById('productNameError').classList.add('show');
                hasError = true;
            }
            
            if (!price || parseFloat(price) <= 0) {
                document.getElementById('priceError').classList.add('show');
                hasError = true;
            }
            
            if (hasError) return;
            
            try {
                const response = await fetch('/vendor/add-item', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        product_name: productName,
                        price: parseFloat(price),
                        description
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    window.location.href = '/vendor/add-item-success?productName=' + encodeURIComponent(productName);
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (err) {
                alert('Error adding item');
                console.error(err);
            }
        });
    </script>
</body>
</html>
