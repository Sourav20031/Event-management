<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions - Vendor</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 1200px; margin: 0 auto; }
        .content {
            background: white; padding: 30px; border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        h1 { color: #2c3e50; margin-bottom: 25px; }
        .order-card {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 20px;
            margin-bottom: 20px;
            background: #f9f9f9;
        }
        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 15px;
            border-bottom: 2px solid #eee;
        }
        .order-header h3 {
            color: #2c3e50;
        }
        .status-badge {
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
            background: #e7f3ff;
            color: #0066cc;
        }
        .order-details {
            padding: 15px 0;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 15px;
        }
        .detail-item {
            padding: 10px;
            background: white;
            border-radius: 3px;
        }
        .detail-label {
            color: #7f8c8d;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 5px;
        }
        .detail-value {
            color: #2c3e50;
            font-size: 16px;
            font-weight: bold;
        }
        .items-table {
            margin-top: 15px;
        }
        .items-table table {
            width: 100%;
            border-collapse: collapse;
        }
        .items-table th, .items-table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .items-table th {
            background: #f0f0f0;
            font-weight: bold;
            color: #34495e;
            font-size: 12px;
        }
        .items-table tbody tr:hover {
            background: #f9f9f9;
        }
        .back-btn { 
            display: inline-block; margin-bottom: 20px;
            padding: 8px 15px; background: #666;
            color: white; text-decoration: none;
            border-radius: 4px;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <header>
        <h2>Transactions</h2>
        <div class="header-right">
            <a href="/vendor/dashboard">Home</a>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/vendor/dashboard" class="back-btn">‚Üê Back</a>

        <div class="content">
            <h1>Your Transactions</h1>

            <% if (orders.length === 0) { %>
                <div class="empty-state">
                    <h2>No Transactions Yet</h2>
                    <p>Your orders will appear here once customers place them.</p>
                </div>
            <% } else { %>
                <% orders.forEach(order => { %>
                    <div class="order-card">
                        <div class="order-header">
                            <div>
                                <h3>Order: <%= order.order_number %></h3>
                                <small style="color: #999;">#<%= order.id %></small>
                            </div>
                            <span class="status-badge"><%= order.status %></span>
                        </div>

                        <div class="order-details">
                            <div class="detail-item">
                                <div class="detail-label">Customer</div>
                                <div class="detail-value"><%= order.user_name %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Email</div>
                                <div class="detail-value" style="font-size: 13px;"><%= order.user_email %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Order Date</div>
                                <div class="detail-value"><%= new Date(order.created_at).toLocaleDateString() %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Total Amount</div>
                                <div class="detail-value" style="color: #27ae60;">Rs <%= order.total_amount %></div>
                            </div>
                        </div>

                        <div class="items-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% order.items.forEach(item => { %>
                                        <tr>
                                            <td><%= item.product_name %></td>
                                            <td>Rs <%= item.unit_price %></td>
                                            <td><%= item.quantity %></td>
                                            <td>Rs <%= item.total_price %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
