<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 1000px; margin: 0 auto; }
        .back-btn {
            display: inline-block; margin-bottom: 20px;
            padding: 8px 15px; background: #666;
            color: white; text-decoration: none;
            border-radius: 4px;
        }
        .vendor-section {
            background: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .vendor-title {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px;
            margin: -20px -20px 15px -20px;
            border-radius: 8px 8px 0 0;
            font-weight: bold;
        }
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        .items-table th, .items-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }
        .items-table th {
            background: #f9f9f9;
            font-weight: bold;
            color: #34495e;
        }
        .items-table tbody tr:hover {
            background: #f9f9f9;
        }
        .qty-control {
            display: flex;
            gap: 5px;
            align-items: center;
        }
        .qty-control input {
            width: 50px;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 3px;
        }
        .btn-small {
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 12px;
        }
        .btn-delete {
            background: #e74c3c;
            color: white;
        }
        .btn-update {
            background: #3498db;
            color: white;
        }
        .vendor-total {
            text-align: right;
            padding: 10px 0;
            border-top: 2px solid #eee;
            font-weight: bold;
            color: #2c3e50;
        }
        .checkout-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background: #27ae60;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-weight: bold;
            margin-top: 10px;
        }
        .checkout-btn:hover {
            background: #229954;
        }
        .grand-total {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 8px;
            text-align: right;
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
            border: 2px solid #27ae60;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7f8c8d;
            background: white;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <header>
        <h2>Shopping Cart</h2>
        <div class="header-right">
            <a href="/user/vendors">Continue Shopping</a>
            <a href="/user/dashboard">Home</a>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/user/vendors" class="back-btn">‚Üê Continue Shopping</a>

        <% if (vendorCart.length === 0) { %>
            <div class="empty-state">
                <h2>Your Cart is Empty</h2>
                <p>Start shopping! <a href="/user/vendors">Browse vendors</a></p>
            </div>
        <% } else { %>
            <% vendorCart.forEach(vendor => { %>
                <div class="vendor-section">
                    <div class="vendor-title"><%= vendor.vendor_name %></div>

                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% vendor.items.forEach(item => { %>
                                <tr id="item-<%= item.id %>">
                                    <td><%= item.product_name %></td>
                                    <td>Rs <%= item.price %></td>
                                    <td>
                                        <div class="qty-control">
                                            <input type="number" id="qty-<%= item.id %>" value="<%= item.quantity %>" min="1">
                                            <button class="btn-small btn-update" onclick="updateQuantity(<%= item.id %>)">Update</button>
                                        </div>
                                    </td>
                                    <td>Rs <%= (item.price * item.quantity).toFixed(2) %></td>
                                    <td>
                                        <button class="btn-small btn-delete" onclick="deleteItem(<%= item.id %>)">Delete</button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>

                    <div class="vendor-total">
                        Total for <%= vendor.vendor_name %>: Rs <%= vendor.vendor_total.toFixed(2) %>
                    </div>

                    <button class="checkout-btn" onclick="checkoutVendor(<%= vendor.vendor_id %>)">Checkout from <%= vendor.vendor_name %></button>
                </div>
            <% }); %>

            <div class="grand-total">
                Grand Total: Rs <%= grandTotal.toFixed(2) %>
            </div>
        <% } %>
    </div>

    <script>
        function updateQuantity(cartItemId) {
            const quantity = parseInt(document.getElementById('qty-' + cartItemId).value);
            
            if (quantity < 1) {
                alert('Quantity must be at least 1');
                return;
            }
            
            fetch('/user/cart/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ cartItemId, quantity })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error updating cart');
                }
            })
            .catch(err => console.error(err));
        }

        function deleteItem(cartItemId) {
            if (confirm('Remove this item from cart?')) {
                fetch('/user/cart/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ cartItemId })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                })
                .catch(err => console.error(err));
            }
        }

        function checkoutVendor(vendorId) {
            window.location.href = '/user/checkout/' + vendorId;
        }
    </script>
</body>
</html>
