<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - User</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 1000px; margin: 0 auto; }
        h1 { color: #2c3e50; margin-bottom: 30px; }
        .checkout-section {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .section-title {
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-weight: bold;
            color: #2c3e50;
        }
        .vendor-info {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .item-row {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 15px;
            padding: 10px 0;
            border-bottom: 1px solid #ecf0f1;
        }
        .item-row:last-child { border-bottom: none; }
        .item-row.header {
            font-weight: bold;
            color: #7f8c8d;
            margin-bottom: 10px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #2c3e50;
            font-weight: bold;
        }
        input[type="radio"], input[type="text"] {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }
        input[type="text"] {
            width: 100%;
        }
        .payment-options {
            display: flex;
            gap: 20px;
            margin: 15px 0;
        }
        .payment-option {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .summary {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 4px;
            margin-top: 20px;
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
        }
        .summary-row.total {
            border-top: 2px solid #ecf0f1;
            font-weight: bold;
            font-size: 18px;
            color: #667eea;
            padding-top: 15px;
        }
        .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        button {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
        }
        .btn-checkout {
            background: #28a745;
            color: white;
        }
        .btn-checkout:hover { background: #218838; }
        .btn-cancel {
            background: #dc3545;
            color: white;
        }
        .btn-cancel:hover { background: #c82333; }
        .back-btn {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <header>
        <div>
            <h2>Checkout</h2>
        </div>
        <div class="header-right">
            <a href="/user/dashboard">Home</a>
            <span>Welcome <%= name %></span>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/user/cart" class="back-btn">← Back to Cart</a>

        <div class="checkout-section">
            <div class="section-title">Order Summary</div>
            
            <div class="vendor-info">
                <strong>Vendor:</strong> <%= vendor.name %>
            </div>

            <div class="item-row header">
                <div>Product</div>
                <div>Qty</div>
                <div>Price</div>
                <div>Total</div>
            </div>

            <% cartItems.forEach(item => { %>
                <div class="item-row">
                    <div><%= item.product_name %></div>
                    <div><%= item.quantity %></div>
                    <div>₹<%= parseFloat(item.price).toFixed(2) %></div>
                    <div>₹<%= parseFloat(item.totalPrice).toFixed(2) %></div>
                </div>
            <% }); %>

            <div class="summary">
                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span>₹<%= parseFloat(total).toFixed(2) %></span>
                </div>
                <div class="summary-row total">
                    <span>Total Amount:</span>
                    <span>₹<%= parseFloat(total).toFixed(2) %></span>
                </div>
            </div>
        </div>

        <div class="checkout-section">
            <div class="section-title">Payment Method</div>
            
            <form id="checkoutForm">
                <div class="form-group">
                    <label>Select Payment Method *</label>
                    <div class="payment-options">
                        <div class="payment-option">
                            <input type="radio" id="credit-card" name="paymentMethod" value="Credit Card" required checked>
                            <label for="credit-card">Credit Card</label>
                        </div>
                        <div class="payment-option">
                            <input type="radio" id="debit-card" name="paymentMethod" value="Debit Card">
                            <label for="debit-card">Debit Card</label>
                        </div>
                        <div class="payment-option">
                            <input type="radio" id="upi" name="paymentMethod" value="UPI">
                            <label for="upi">UPI</label>
                        </div>
                        <div class="payment-option">
                            <input type="radio" id="cash" name="paymentMethod" value="Cash on Delivery">
                            <label for="cash">Cash on Delivery</label>
                        </div>
                    </div>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn-checkout">Place Order</button>
                    <button type="button" class="btn-cancel" onclick="history.back()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('checkoutForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const vendorId = '<%= vendor.id %>';
            const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            
            try {
                const response = await fetch('/user/place-order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        vendorId,
                        paymentMethod
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Order placed successfully!\nOrder Number: ' + data.orderNumber);
                    window.location.href = '/user/order-status';
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error placing order');
            }
        });
    </script>
</body>
</html>
