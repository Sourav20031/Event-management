<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guest List - User</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f4f4;
            padding: 20px;
        }
        header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header-right { display: flex; gap: 15px; }
        .header-right a {
            color: white; text-decoration: none; padding: 8px 15px;
            background: rgba(255,255,255,0.2); border-radius: 4px;
        }
        .container { max-width: 1000px; margin: 0 auto; }
        h1 { color: #2c3e50; margin-bottom: 30px; }
        .form-section {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 40px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #2c3e50;
            font-weight: bold;
        }
        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }
        button {
            background: #667eea;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }
        button:hover { background: #5568d3; }
        .guest-list-card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .list-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }
        .list-name { font-weight: bold; color: #2c3e50; font-size: 18px; }
        .guest-count { color: #7f8c8d; }
        .back-btn {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
        .no-lists {
            background: white;
            padding: 40px;
            text-align: center;
            border-radius: 8px;
            color: #7f8c8d;
        }
        .message {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
        }
        .message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <header>
        <div>
            <h2>Guest List Management</h2>
        </div>
        <div class="header-right">
            <a href="/user/dashboard">Home</a>
            <span>Welcome <%= name %></span>
            <a href="/logout">LogOut</a>
        </div>
    </header>

    <div class="container">
        <a href="/user/dashboard" class="back-btn">‚Üê Back to Dashboard</a>

        <div class="form-section">
            <h3>Create New Guest List</h3>
            <form id="createListForm">
                <div class="form-group">
                    <label for="listName">List Name *</label>
                    <input type="text" id="listName" name="listName" placeholder="e.g., Wedding Guest List" required>
                </div>
                <button type="submit">Create List</button>
            </form>
        </div>

        <% if (guestLists && guestLists.length > 0) { %>
            <h3>Your Guest Lists</h3>
            <% guestLists.forEach(list => { %>
                <div class="guest-list-card">
                    <div class="list-header">
                        <div>
                            <div class="list-name"><%= list.list_name %></div>
                            <div class="guest-count"><%= list.entry_count %> guests</div>
                        </div>
                        <div style="text-align: right;">
                            <small style="color: #7f8c8d;">Created: <%= new Date(list.created_at).toLocaleDateString() %></small>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-lists">
                <h3>No Guest Lists Yet</h3>
                <p>Create a guest list to manage your event guests</p>
            </div>
        <% } %>
    </div>

    <script>
        document.getElementById('createListForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const listName = document.getElementById('listName').value.trim();
            
            if (!listName) {
                alert('Please enter a list name');
                return;
            }
            
            try {
                const response = await fetch('/user/guest-list/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ listName })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Guest list created successfully');
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error creating guest list');
            }
        });
    </script>
</body>
</html>
